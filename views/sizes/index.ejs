            <div class="form-group">
                <label for="formGroupExampleInput">Brands</label>
                <input type="text" name="brands" class="form-control" id="formGroupExampleInput" placeholder="Lee">
                </div>
            <div class="form-group">
                <label for="formGroupExampleInput" >Description</label>
                <input type="text" name="description" class="form-control" id="formGroupExampleInput" placeholder="I like black jeans....">
                </div>
           
            <button type="submit" class="btn btn-primary">Add Article</button>
        </form> 
    </div>
    
