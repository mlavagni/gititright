<h1>sizes </h1>
  
    <div id='itemsContainer' class='sizeContainer'>
            <form class="newSize" id="add-size-form" method="POST" action="/users/<%= user._id %>/sizes">
            <div class="form-group">
                <label for="formGroupExampleInput">Article</label>
                <input type="text" name="name" class="form-control" id="formGroupExampleInput" placeholder="Jeans">
